<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.batch.dao.BatchResourceDao">

    <sql id="select_content_fragment">
      id,tenant_id,project_id,node_pid,url,resource_type,resource_name,origin_file_name,resource_desc,gmt_create,gmt_modified,create_user_id,modify_user_id,is_deleted,node_id
    </sql>

    <sql id="update_fragment">
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="projectId != null">
                project_id = #{projectId},
            </if>
            <if test="nodePid != null">
                node_pid = #{nodePid},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="resourceType != null">
                resource_type = #{resourceType},
            </if>
            <if test="resourceName != null">
                resource_name = #{resourceName},
            </if>
            <if test="originFileName != null">
                origin_file_name = #{originFileName},
            </if>
            <if test="resourceDesc != null">
                resource_desc = #{resourceDesc},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="createUserId != null">
                create_user_id = #{createUserId},
            </if>
            <if test="modifyUserId != null">
                modify_user_id = #{modifyUserId},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
        </set>
    </sql>

    <select id="getOne" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="getByIdIgnoreDeleted" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE id = #{id}
    </select>

    <select id="getResourceURLByFunctionId" resultType="java.lang.String">
        SELECT br.url
        FROM rdos_batch_function_resource bfr
        INNER JOIN rdos_batch_resource br ON bfr.resource_id = br.id
        WHERE bfr.function_id = #{functionId} AND br.is_deleted = 0
        limit 1
    </select>


    <select id="listByIds" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE id in
        <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
        <if test="isDeleted != null">
            and is_deleted = #{isDeleted}
        </if>
    </select>

    <select id="listByPidAndProjectId" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE project_id = #{projectId} and node_pid = #{nodePid} AND is_deleted = 0
    </select>

    <select id="listByProjectId" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE project_id = #{projectId} AND is_deleted = 0
    </select>

    <update id="deleteById">
        UPDATE rdos_batch_resource
        SET is_deleted = 1,gmt_modified = NOW()
        WHERE id = #{id} AND project_id = #{projectId}
    </update>

    <update id="deleteByIds">
        UPDATE rdos_batch_resource
        SET is_deleted = 1,gmt_modified = NOW()
        WHERE id IN
        <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND project_id = #{projectId}
    </update>

    <select id="getUrlById" resultType="java.lang.String">
        SELECT
        url
        FROM rdos_batch_resource
        WHERE id = #{id}
    </select>

    <select id="listByNameAndProjectId" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE project_id = #{projectId} and resource_name = #{resourceName} AND is_deleted = #{isDeleted}
    </select>

    <insert id="insert" parameterType="BatchResource" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO rdos_batch_resource
          (tenant_id,project_id,node_pid,url,resource_type,resource_name,origin_file_name,resource_desc,gmt_create,gmt_modified,create_user_id,modify_user_id,is_deleted)
        VALUES
          (#{tenantId},#{projectId},#{nodePid},#{url},#{resourceType},#{resourceName},#{originFileName},#{resourceDesc},#{gmtCreate},#{gmtModified},#{createUserId},#{modifyUserId},#{isDeleted})
    </insert>

    <insert id="batchInsert" parameterType="BatchResource">
        INSERT INTO rdos_batch_resource
          (tenant_id,project_id,node_pid,url,resource_type,resource_name,origin_file_name,resource_desc,gmt_create,gmt_modified,create_user_id,modify_user_id,is_deleted)
        VALUES
        <foreach collection="list" item="bean" separator=",">
          (#{bean.tenantId},#{bean.projectId},#{bean.nodePid},#{bean.url},#{bean.resourceType},#{bean.resourceName},#{bean.originFileName},#{bean.resourceDesc},#{bean.gmtCreate},#{bean.gmtModified},#{bean.createUserId},#{bean.modifyUserId},#{bean.isDeleted})
        </foreach>
    </insert>

    <update id="update" parameterType="BatchResource">
        UPDATE
        rdos_batch_resource
        <include refid="update_fragment"/>
        WHERE
        id = #{id} AND is_deleted = 0
    </update>

    <select id="countByProjectId" resultType="java.lang.Integer">
        select count(id) from rdos_batch_resource where tenant_id = #{tenantId} and project_id = #{projectId} and is_deleted = 0
    </select>

    <select id="generalQuery" parameterType="com.dtstack.batch.web.pager.PageQuery" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        where tenant_id = #{model.tenantId} and project_id = #{model.projectId} and is_deleted = 0
        <if test="model.resourceModifyUserId != null">
            and modify_user_id = #{model.resourceModifyUserId}
        </if>
        <if test="model.resourceName != null">
            and resource_name like CONCAT('%',#{model.resourceName},'%')
        </if>
        <if test="model.startTime != null">
            and to_days(gmt_modified) >= to_days(#{model.startTime})
        </if>
        <if test="model.endTime != null">
            and to_days(#{model.endTime}) >= to_days(gmt_modified)
        </if>

        <if test="orderBy != null and sort != null">
            order by ${orderBy} ${sort}
        </if>
        <if test="orderBy != null and sort == null">
            order by ${orderBy} desc
        </if>
        <if test="start != null and pageSize != null">
            limit #{start} , #{pageSize}
        </if>
        <if test="start == null and pageSize != null">
            limit #{pageSize}
        </if>
        <if test="start == null and pageSize == null">
            limit 1000
        </if>
    </select>

    <select id="generalCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM rdos_batch_resource
        where tenant_id = #{model.tenantId} and project_id = #{model.projectId} and is_deleted = 0
        <if test="model.resourceModifyUserId != null">
            and modify_user_id = #{model.resourceModifyUserId}
        </if>
        <if test="model.resourceName != null">
            and resource_name like CONCAT('%',#{model.resourceName},'%')
        </if>
        <if test="model.startTime != null">
            and to_days(gmt_modified) >= to_days(#{model.startTime})
        </if>
        <if test="model.endTime != null">
            and to_days(#{model.endTime}) >= to_days(gmt_modified)
        </if>
    </select>

    <select id="getByName" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE tenant_id = #{tenantId} and project_id = #{projectId} and resource_name = #{resourceName}
        AND is_deleted = 0 limit 1
    </select>

    <select id="listByUrls" resultType="BatchResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_resource
        WHERE tenant_id = #{tenantId} and project_id = #{projectId} and is_deleted = 0
        <if test="list != null and list.size() > 0">
            and url in
            <foreach collection="list" item="url" open="(" separator="," close=")">
                #{url}
            </foreach>
        </if>
    </select>

    <update id="deleteByProjectId" parameterType="java.lang.Long">
        UPDATE rdos_batch_resource
        SET is_deleted = 1, gmt_modified = now(), modify_user_id = #{userId}
        WHERE project_id = #{projectId} AND is_deleted = 0;
    </update>
</mapper>
