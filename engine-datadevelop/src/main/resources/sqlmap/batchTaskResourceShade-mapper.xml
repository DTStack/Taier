<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.batch.dao.BatchTaskResourceShadeDao">

    <sql id="select_content_fragment">
      id,task_id,resource_id,resource_type,tenant_id,gmt_create,gmt_modified,is_deleted
    </sql>

    <sql id="update_fragment">
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
            <if test="resourceId != null">
                resource_id = #{resourceId},
            </if>

            <if test="resourceType != null">
                resource_type = #{resourceType},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
        </set>
    </sql>

    <select id="getOne" resultType="com.dtstack.batch.domain.BatchTaskResourceShade">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_task_resource_shade
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="listByTaskId" resultType="com.dtstack.batch.domain.BatchTaskResourceShade">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_task_resource_shade
        WHERE task_id = #{taskId}

        <if test="resourceType != null">
            and resource_type = #{resourceType}
        </if>

        and tenant_id = #{tenantId} and is_deleted = 0
    </select>

    <delete id="deleteByTaskId">
        DELETE FROM rdos_batch_task_resource_shade
        WHERE task_id = #{taskId}
    </delete>

    <insert id="insert" parameterType="com.dtstack.batch.domain.BatchTaskResourceShade" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO rdos_batch_task_resource_shade
        (task_id,resource_id,resource_type,tenant_id,gmt_create,gmt_modified,is_deleted)
        VALUES
        (#{taskId},#{resourceId}, #{resourceType},#{tenantId},now(),now(),0)
    </insert>

    <update id="update" parameterType="com.dtstack.batch.domain.BatchTaskResourceShade">
        UPDATE
        rdos_batch_task_resource_shade
        <include refid="update_fragment"/>
        WHERE
        id = #{id} AND is_deleted = 0
    </update>

    <select id="listResourceByTaskId" resultType="com.dtstack.batch.domain.BatchResource">
        SELECT
        re.id,re.tenant_id,re.node_pid,re.url,re.resource_type,re.resource_name,re.origin_file_name,re.resource_desc,re.gmt_create,re.gmt_modified,re.create_user_id,re.modify_user_id,re.is_deleted,re.node_id
        FROM rdos_batch_task_resource_shade tr
        LEFT JOIN rdos_batch_resource re ON re.id = tr.resource_id
        WHERE tr.task_id = #{taskId}

        <if test="resourceType != null">
            and tr.resource_type = #{resourceType}
        </if>

        and tr.is_deleted = 0 and re.is_deleted = 0
    </select>

    <update id="deleteByTenantId" parameterType="java.lang.Long">
        UPDATE rdos_batch_task_resource_shade
        SET is_deleted = 1, gmt_modified = now()
        WHERE tenant_id = #{tenantId} AND is_deleted = 0;
    </update>
</mapper>
