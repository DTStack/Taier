<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.batch.dao.BatchFunctionResourceDao">

    <sql id="select_content_fragment">
      id,function_id,resource_id, gmt_create,gmt_modified,is_deleted, project_id,tenant_id
    </sql>

    <sql id="update_fragment">
        <set>
            <if test="id != null and id > 0">
                id = #{id},
            </if>
            <if test="functionId != null">
                function_id = #{functionId},
            </if>
            <if test="resourceId != null">
                resource_id = #{resourceId},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="projectId != null">
                project_id = #{projectId},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
        </set>
    </sql>

    <insert id="insert" parameterType="BatchFunctionResource" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO rdos_batch_function_resource
          (function_id,resource_id,gmt_create,gmt_modified,is_deleted,project_id,tenant_id,resourceId)
        VALUES
            (#{functionId},#{resource_Id},now(),now(),0,#{projectId},#{tenantId},#{resourceId})
    </insert>

    <select id="getBeanByResourceIdAndFunctionId" resultType="BatchFunctionResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_function_resource
        WHERE function_id = #{functionId} AND resource_id = #{resourceId} AND is_deleted = 0 limit 1
    </select>


    <select id="listByFunctionId" resultType="BatchFunctionResource">
        SELECT resource_id AS resource_id,
        <include refid="select_content_fragment"/>
        FROM rdos_batch_function_resource
        WHERE function_id = #{functionId} AND is_deleted = 0
    </select>

    <select id="listByFunctionResourceId" resultType="BatchFunctionResource">
        SELECT resource_id AS resource_id,
        <include refid="select_content_fragment"/>
        FROM rdos_batch_function_resource
        WHERE resource_id = #{resource_Id} AND is_deleted = 0
    </select>

    <update id="updateByFunctionId" parameterType="com.dtstack.batch.domain.BatchFunctionResource">
        UPDATE rdos_batch_function_resource
        <include refid="update_fragment"/>
        WHERE
        function_id = #{functionId} AND is_deleted = 0
    </update>

    <update id="deleteByFunctionId">
        update rdos_batch_function_resource set is_deleted = 1
        WHERE function_id = #{functionId}
    </update>

    <select id="listByResourceId" resultType="BatchFunctionResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_function_resource
        WHERE resource_id = #{resourceId} and is_deleted = 0
    </select>

    <update id="deleteByProjectId" parameterType="java.lang.Long">
        UPDATE rdos_batch_function_resource
        SET is_deleted = 1, gmt_modified = now()
        WHERE tenant_id = #{tenantId} AND is_deleted = 0;
    </update>

    <select id="getResourceFunctionByFunctionId" resultType="com.dtstack.batch.domain.BatchFunctionResource">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_batch_function_resource
        WHERE function_id = #{functionId} AND is_deleted = 0 LIMIT 1
    </select>
</mapper>
