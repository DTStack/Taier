<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.taier.dao.mapper.DevelopTaskParamShadeMapper">

    <sql id="select_content_fragment">
      id,task_id,type,param_name,param_command,gmt_create,gmt_modified,is_deleted
    </sql>

    <sql id="update_fragment">
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="paramName != null">
                param_name = #{paramName},
            </if>
            <if test="paramCommand != null">
                param_command = #{paramCommand},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted},
            </if>
        </set>
    </sql>

    <insert id="insert" parameterType="com.dtstack.taier.dao.domain.DevelopTaskParamShade" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO develop_task_param_shade
          (task_id,type,param_name,param_command,gmt_create,gmt_modified,is_deleted)
        VALUES
          (#{taskId},#{type},#{paramName},#{paramCommand},#{gmtCreate},#{gmtModified},#{isDeleted})
    </insert>

    <update id="update" parameterType="com.dtstack.taier.dao.domain.DevelopTaskParamShade">
        UPDATE
        develop_task_param_shade
        <include refid="update_fragment"/>
        WHERE
        id = #{id} AND is_deleted = 0
    </update>

</mapper>
