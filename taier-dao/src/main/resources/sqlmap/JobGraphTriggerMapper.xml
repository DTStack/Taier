<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dtstack.taier.dao.mapper.JobGraphTriggerMapper">

    <sql id="select_content_fragment">
        id,trigger_type,trigger_time,gmt_create,gmt_modified,is_deleted
    </sql>

    <select id="getByTriggerTimeAndTriggerType" resultType="com.dtstack.taier.dao.domain.JobGraphTrigger">
        SELECT
        <include refid="select_content_fragment"/>
        FROM schedule_job_graph_trigger
        WHERE trigger_time = #{triggerTime}
        AND trigger_type = #{triggerType} and is_deleted = 0 LIMIT 1
    </select>
</mapper>