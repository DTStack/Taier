<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dtstack.taiga.dao.mapper.DictDao">

    <sql id="select_content_fragment">
        id,type,dict_name,dict_value,dict_name_zh,dict_name_en,dict_sort,gmt_create,gmt_modified,is_deleted
    </sql>

    <select id="listByType" resultType="com.dtstack.taiga.dao.domain.Dict">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_dict
        WHERE type = #{type} AND is_deleted = 0 ORDER BY dict_sort ASC
    </select>

    <select id="getByTypeAndValue" resultType="com.dtstack.taiga.dao.domain.Dict">
        SELECT
        <include refid="select_content_fragment"/>
        FROM rdos_dict
        WHERE type = #{type} AND dict_value = #{value} AND is_deleted = 0
    </select>

</mapper>