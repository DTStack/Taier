    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <elasticsearch.version>6.3.1</elasticsearch.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>com.dtstack.engine</groupId>
