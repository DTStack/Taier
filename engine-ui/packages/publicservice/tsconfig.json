{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "removeComments": false,
        "baseUrl": ".",   
        "jsx": "react",
        "importHelpers": true,
        "skipLibCheck": true,
        
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
       // "noImplicitReturns": true,
       // "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "experimentalDecorators": true,
        "typeRoots": [
            "node",
            "node_modules/@types",
            "./typings"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "assets/*": [
                "./public/assets/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "pages/*": [
                "./src/pages/*"
            ],
            "services/*": [
                "./src/services/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "constants/*": [
                "./src/constants/*"
            ],
            "layouts/*": [
                "./src/layouts/*"
            ],
        },
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./src/**/*.js", "src/components/Uploader/index.jsx", "src/components/MapDrop/index.jsx", "src/components/Footer/index.jsx", "src/components/Downloader/index.jsx", "src/components/Swiper/index.jsx", "src/components/ProgressBar/index.jsx", "src/components/PageHeader/index.jsx", "src/components/Loading/index.jsx", "src/components/echarts/WordChart/index.jsx", "src/components/echarts/ScatterChart/index.jsx", "src/components/echarts/RadarChart/index.jsx", "src/components/echarts/PieChart/index.jsx", "src/components/echarts/MapChart/index.jsx", "src/components/echarts/LineChart/index.jsx", "src/components/echarts/GaugeChart/index.jsx", "src/components/echarts/DoubleChart/index.jsx", "src/components/echarts/BarChart/index.jsx", "src/components/echarts/AreaChart/index.jsx"
    ],
    "exclude": ["node_modules", "build", "dist", "scripts", "test", "webpack", "jest"]
}
